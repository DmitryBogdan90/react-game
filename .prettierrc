{
  "bracketSpacing": true,
  "tabWidth": 2,
  "useTabs": false,
  "editor.formatOnSave": true,
  "printWidth": 100,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.scss"],
      "options": {
        "singleQuote": false,
        "number-leading-zero": "never"
      }
    }
  ]
}
